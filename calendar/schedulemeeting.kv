<ScheduleLabel@Label>:
    markup: True
    font_size: 14
    size_hint: [.3, .08]

<DescriptLabel@Label>:
    markup: True
    font_size: 12
    size_hint: [.4, .08]


<ScheduleTextInput@TextInput>:
    size_hint: [.5, .08]

<ShortSchedTextInput@TextInput>:
    size_hint: [.2, .08]


<ScheduleMeeting@StackLayout>:
    orientation: 'lr-tb'
    padding: 10
    ScheduleLabel:
        text: '[b]Meeting Title[/b]'
    ScheduleTextInput:
        hint_text: 'name of meeting'
    ScheduleLabel:
        text: '[b]Location[/b]'
    ScheduleTextInput:
        hint_text: 'where the meeting is to be held'
    ScheduleLabel:
        text: '[b]Required people[/b]'
    ScheduleTextInput:
        hint_text: 'number of people e.g. 4'
    ScheduleLabel:
        text: '[b]Optional people[/b]'
    ScheduleTextInput:
        hint_text: 'myname@email.com; myname2@email.com;'

    #Slider for length of meeting
    DescriptLabel:
        text: '[color=#37abc8ff][b]Length of meeting[/b][/color]'
    Slider:

        size_hint: [.7, .08]
        id: slider
        min: 0
        max: 8
        step: 1
        orientation: 'horizontal'
    Label:
        size_hint: [.1, .08]
        text: str(slider.value)

    ScheduleLabel:
        text: '[size=14px][b]Earliest meeting date[/b]'
    ShortSchedTextInput:
        hint_text: '1'
    DescriptLabel:
        text: '[color=#37abc8ff][b]Days time[/b][/color]'

    ScheduleLabel:
        text: '[size=14px][b]Latest meeting date[/b]'
    ShortSchedTextInput:
        hint_text: '5'
    DescriptLabel:
        text: '[color=#37abc8ff][b]Days time[/b][/color]'

    ScheduleLabel:
        text: '[size=14px][b]Scheduling Deadline[/b]'
    ShortSchedTextInput:
        hint_text: '5'
    DescriptLabel:
        text: '[color=#37abc8ff][b]Days time[/b][/color]'

    #Slider for length of meeting
    DescriptLabel:
        text: '[color=#37abc8ff][b]Priority[/b][/color]'

    Slider:

        size_hint: [.7, .08]
        id: slider_priority
        min: 0
        max: 10
        step: 1
        orientation: 'horizontal'
    Label:
        size_hint: [.1, .08]
        text: str(slider_priority.value)

    Button:
        text: 'Start Scheduling'
        size_hint: [.3, .08]


