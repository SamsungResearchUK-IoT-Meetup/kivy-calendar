<ScheduleLabel@Label>:
    markup: True
    font_size: 14
    size_hint: [.3, .08]

<DescriptLabel@Label>:
    markup: True
    font_size: 12
    size_hint: [.4, .08]


<ScheduleTextInput@TextInput>:
    markup: True
    size_hint: [.5, .08]

<ShortSchedTextInput@TextInput>:
    markup: True
    size_hint: [.2, .08]


<ScheduleMeeting@StackLayout>:
    orientation: 'lr-tb'
    padding: 10
    # Meeting name and attendees
    ScheduleLabel:
        id: title_label
        text: '[b]Meeting Title[/b]'
    ScheduleTextInput:
        id: title
        hint_text: 'name of meeting'
    ScheduleLabel:
        text: '[b]Location[/b]'
    ScheduleTextInput:
        id: location
        hint_text: 'where the meeting is to be held'
    ScheduleLabel:
        id: required_people_label
        text: '[b]Required people[/b]'
    ScheduleTextInput:
        id: required_people
        hint_text: 'jo.brown@email.com ; sam@email.com'
    ScheduleLabel:
        id: optional_people_label
        text: '[b]Optional people[/b]'
    ScheduleTextInput:
        markup: True
        id: optional_people
        hint_text: 'myname@email.com; myname2@email.com;'

    # Slider for length of meeting
    DescriptLabel:
        id: meeting_length_label
        text: '[color=#37abc8ff][b]Length of meeting[/b][/color]'
    Slider:

        size_hint: [.7, .08]
        id: slider_meeting_length
        min: 0
        max: 12
        step: 1
        orientation: 'horizontal'
    Label:
        size_hint: [.1, .08]
        text: str(schedulemeeting.TD_15MIN * slider_meeting_length.value)

    # Meeting times
    ScheduleLabel:
        id: earliest_date_label
        text: '[size=14px][b]Earliest meeting time[/b]'
    ScheduleTextInput:
        id: earliest_date
        hint_text: 'YYYY-MM-DD hh:mm:ss'

    ScheduleLabel:
        id: latest_date_label
        text: '[size=14px][b]Latest meeting time[/b]'
    ScheduleTextInput:
        id: latest_date
        hint_text: 'YYYY-MM-DD hh:mm:ss'

    ScheduleLabel:
        text: '[size=14px][b]Scheduling Deadline[/b]'
    ScheduleTextInput:
        id: schedule_deadline
        hint_text: 'YYYY-MM-DD hh:mm:ss'

    #Slider for length of meeting
    DescriptLabel:
        text: '[color=#37abc8ff][b]Priority[/b][/color]'

    Slider:
        size_hint: [.7, .08]
        id: slider_priority
        min: 0
        max: 10
        step: 1
        orientation: 'horizontal'
    Label:
        size_hint: [.1, .08]
        text: str(slider_priority.value)

    Button:
        text: 'Start Scheduling'
        on_release: root.start()
        size_hint: [.3, .08]

