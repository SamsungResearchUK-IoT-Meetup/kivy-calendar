<CalendarWidget@StackLayout>:
    orientation: 'lr-tb'
    padding: 10

    Label:
        markup: True
        text: '[size=12px][color=#37abc8ff]Calendar View[/color]'
        size_hint: [1, .3]

    Button:
        text: 'View Diagnostic'
        size_hint: [.5, .3]
        #on_release: root.start()
        on_release: root.view_diagnostic(*args)
    Button:
        text: 'View Final'
        size_hint: [.5, .3]
        on_release: root.view_final(*args)
    Label:
        markup: True
        text: '[size=12px][color=#37abc8ff][b]Number of Negotiations executed[/b][/color]'
        size_hint: [.8, .3]
    Label:
        markup: True
        text: '[size=12px][color=#37abc8ff][b]0[/b][/color]'
        size_hint: [.2, .3]
